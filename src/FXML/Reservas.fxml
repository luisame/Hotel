<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<!-- Vista de la pantalla de Reservas, sin terminar -->
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" padding="10" fx:controller="CONTROLLER.Reservas">
    <VBox spacing="10">
        <HBox spacing="10">
            <Label text="Fecha de entrada:" />
            <DatePicker fx:id="fechaEntradaPicker" />
        </HBox>
        <HBox spacing="10">
            <Label text="Fecha de salida:" />
            <DatePicker fx:id="fechaSalidaPicker" />
        </HBox>
        <!-- Calendario personalizado para mostrar disponibilidad de habitaciones -->
        <!-- Implementa el componente de calendario personalizado aquÃ­ -->
    </VBox>
    <VBox spacing="10">
        <HBox spacing="10">
            <Label text="Precio por noche:" />
            <Label fx:id="precioNocheLabel" />
        </HBox>
        <HBox spacing="10">
            <Label text="Total:" />
            <Label fx:id="totalLabel" />
        </HBox>
        <Button text="Reservar" onAction="#reservar" />
    </VBox>
</GridPane>
